<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Assignment 6</title>
	<link rel="stylesheet" href="/styles.css" />
	<script src="/script.js" defer></script>
</head>

<body>
	<!-- Form -->
	<form>
		<fieldset>
			<label>Name:
				<input type="text" id="name" />
			</label>
			<label>Reps:
				<input type="number" id="reps" />
			</label>
			<label>Weight:
				<input type="number" id="weight" />
			</label>

			<label>Date:
				<input type="date" id="date" />
			</label>

			<input type="radio" id="lbs" value="1" name="units" />lbs</input>

			<input type="radio" id="kg" value="0" name="units" />kg</input>

			<li hidden id="id" value=""></li>

			<input id="submitButton" type="submit" />

			<button id="submitEdit">Submit Edit</button>

		</fieldset>
	</form>

	<!-- Table -->
	<table style="width: 50%">
		<caption>
			Workout Tracker
		</caption>
		<!-- Header Row -->
		<tr>
			<th>Name</th>
			<th>Reps</th>
			<th>Weight</th>
			<th>Date</th>
			<th>Unit</th>
		</tr>

		{{#each data}}
		<tr>
			<td hidden>{{this.id}}</td>
			<td>{{this.name}}</td>
			<td>{{this.reps}}</td>
			<td>{{this.weight}}</td>
			<td>{{this.date}}</td>
			<td>{{this.lbs}}</td>
			<td>
				<button id="deleteButton" name={{this.id}} onclick="deleteRow({{this.id}})">Delete</button>
			</td>

			<td>
				<button id="editButton"
					onclick="editRow('{{this.id}}', '{{this.name}}', '{{this.reps}}', '{{this.weight}}', '{{this.date}}', '{{this.lbs}}')">Edit</button>
			</td>
		</tr>
		{{/each}}
	</table>
</body>

</html>